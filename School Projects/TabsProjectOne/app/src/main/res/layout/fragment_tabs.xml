<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:background="@color/darkblue"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bar1"
        android:src="@drawable/bluebars"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar1"
        android:id="@+id/bar2"
        android:layout_marginTop="20dp"
        android:src="@drawable/bluebars"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bar2"
        android:id="@+id/bar3"
        android:src="@drawable/bluebars"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:id="@+id/bar4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar3"
        android:layout_marginTop="20dp"
        android:src="@drawable/bluebars"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar4"
        android:layout_marginTop="20dp"
        android:id="@+id/bar5"
        android:src="@drawable/bluebars"/>

</android.support.constraint.ConstraintLayout>