<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textColor="#fff"
        android:text="Recipe For Android"
        android:textSize="50dp"
        android:paddingTop="40dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/holo_green_dark"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/arrow"
        tools:ignore="MissingConstraints" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:id="@+id/cl1"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#cecece"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/dropdown"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#30e301"
            android:src="@drawable/editlocation"
            app:layout_constraintStart_toEndOf="@id/imageView"
            />

        <TextView
            android:layout_width="200dp"
            android:padding="3dp"
            android:id="@+id/card_title"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Change your Android wallpaper to nasa's image of the day!"
            android:textStyle="bold"
            android:textSize="17sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="10sp"
            android:text="by Olaore Fouad"
            app:layout_constraintLeft_toRightOf="@id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/card_title"
            android:layout_marginLeft="5dp"
            android:id="@+id/by_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/user1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/by_text"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/views"
            android:id="@+id/view1"
            app:layout_constraintLeft_toRightOf="@+id/user1_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="17.5k"
            android:id="@+id/user1_text"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/user1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view1"
            android:layout_marginTop="65dp"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl1"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#cecece"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/dropdown"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            app:layout_constraintLeft_toRightOf="@id/imageView3"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#30e301"
            android:src="@drawable/editlocation"
            app:layout_constraintStart_toEndOf="@id/imageView3"
            />

        <TextView
            android:layout_width="200dp"
            android:padding="3dp"
            android:id="@+id/card_title1"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Change your Android wallpaper to nasa's image of the day!"
            android:textStyle="bold"
            android:textSize="17sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="10sp"
            android:text="by Olaore Fouad"
            app:layout_constraintLeft_toRightOf="@id/imageView4"
            app:layout_constraintTop_toBottomOf="@id/card_title1"
            android:layout_marginLeft="5dp"
            android:id="@+id/by_text1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/user2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/by_text1"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/views"
            android:id="@+id/view2"
            app:layout_constraintLeft_toRightOf="@+id/user2_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="17.5k"
            android:id="@+id/user2_text"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/user2"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view2"
            android:layout_marginTop="65dp"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>